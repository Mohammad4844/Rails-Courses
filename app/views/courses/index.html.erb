<% if user_signed_in? %>
  <div id="courses">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Course Code</th>
          <th>Course Name</th>
          <th>Credit Hours</th>
          <th>Instructor</th>
          <th>Days</th>
          <th>Timings</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <% if course.user == current_user %>
            <tr>
              <td><%= link_to course[:code], course  %></td>
              <td><%= course[:name] %></td>
              <td><%= course[:credits] %></td>
              <td><%= course[:instructor] %></td>
              <td><%= course[:days] %></td>
              <td><%= course[:timing] %></td>
              <td>
                <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New course", new_course_path, class: "btn btn-secondary"%>
<% else %>
  <h1>Hi!</h1>
  <p class="lead">
    This is a simple CRUD app where you can add / edit / delete courses. Courses saved are associated with 
    only your account, and only you can view / edit them. Here is a screenshot of the interface:
  </p>
  <br>
  <div class="mb-3">
    <%= image_tag('courses-app-table-sample.png', class: "img-thumbnail img-fluid border-dark") %>
  </div>
  <br>
  <p class="lead">Create an account to get started!</p>
<% end %>